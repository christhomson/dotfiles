[core]
	editor = vim
	excludesfile = ~/.config/git/ignore
	quotepath = false
	autocrlf = input
[alias]
	co = checkout
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	s = status -sb
	st = status -sb
	cp = cherry-pick
	unstage = reset HEAD --
	last = !git --no-pager log -1 HEAD
	stash-unapply = !git stash show -p | git apply -R
	blame-anywhere = blame -C
	down = smart-pull
	conflicts = ! egrep -lr '(<|>){7}' .
	rename = branch -m
	recent = !git --no-pager lg -n 25
	unreachable-stashes = !git fsck --unreachable | grep commit | cut -d\\  -f3 | xargs git --no-pager lg --merges --no-walk --grep=WIP
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = !git ls-files -v | grep ^h | cut -c 3-
	unassume-all = !git assumed | xargs git update-index --no-assume-unchanged
	assume-all = !git st -s | awk {'print $2'} | xargs git assume
	edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; vim `f`"
	add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
[push]
	default = upstream
[difftool]
[diff]
	algorithm = patience
[help]
	autocorrect = 30
[color]
	ui = true
[log]
	abbrevCommit = true
[init]
	templatedir = ~/.config/git/templates
[url "git@github.com:"]
	insteadOf = "gh:"
	insteadOf = "github:"
	pushInsteadOf = "git://github.com/"
	pushInsteadOf = "https://github.com/"
