[core]
	editor = vim
	excludesfile = ~/.dotfiles/git/ignore
	quotepath = false
	autocrlf = input
[alias]
	co = checkout
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	s = status -sb
	st = status -sb
	pl = smart-pull
[push]
	default = matching
[difftool]
[diff]
	algorithm = patience
[help]
	autocorrect = 1
[color]
	ui = always
